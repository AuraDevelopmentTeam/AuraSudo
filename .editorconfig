# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space

# Google Style
[*.java]
indent_size = 2
indent_style = space

# Ensure YAML files are always fine
[*.{yml,yaml}]
indent_style = space